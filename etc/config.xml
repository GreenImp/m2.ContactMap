<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <contact_map>
            <map>
                <enabled>1</enabled>
                <map_type>google</map_type>
            </map>

            <map_type_google>
                <api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
            </map_type_google>

            <map_type_mapbox>
                <api_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />

                <style_url>mapbox://styles/mapbox/streets-v10</style_url>
            </map_type_mapbox>

            <map_details>
                <zoom>17</zoom>
            </map_details>

            <map_controls>
                <scaleControl>0</scaleControl>

                <zoomControl>0</zoomControl>
            </map_controls>

            <popup>
                <enabled>0</enabled>

                <always_show>1</always_show>

                <show_address>1</show_address>

                <show_directions_link>1</show_directions_link>

                <anchor>dynamic</anchor>
            </popup>
        </contact_map>
    </default>
</config>
